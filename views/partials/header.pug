.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | Hape Pratama Grafika


    .collapse.navbar-collapse
    
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Home
        li(class='dropdown')
          a(class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes" aria-expanded="true") Contacts
            span.caret
          ul.dropdown-menu
            li(class=(title == 'Supplier List') ? 'active' : undefined)
              a(href='/supplier/') Supplier List
            li(class=(title == 'Customer List') ? 'active' : undefined)
              a(href='/customer/') Customer List
        li(class='dropdown')
          a(class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes" aria-expanded="true") Inventory
            span.caret
          ul.dropdown-menu
            li(class=(title == 'Inventory List') ? 'active' : undefined)
              a(href='/products/index') Inventory List
        li(class='dropdown')
          a(class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes" aria-expanded="true") Orders
            span.caret
          ul.dropdown-menu
            li(class=(title == 'Purchase Order') ? 'active' : undefined)
              a(href='/purchase/') Purchase Order
            li(class=(title == 'Invoice') ? 'active' : undefined)
              a(href='/invoice/') Invoice
            li(class=(title == 'Report') ? 'active' : undefined)
              a(href='/report/') Report
          

        //li(class=(title == 'API Examples') ? 'active' : undefined)
          //a(href='/api') API Examples
        //li(class=(title == 'Contact') ? 'active' : undefined)
          //a(href='/contact') Contact
        //li(class=(title == 'Products') ? 'active' : undefined)
          //a(href='api/products') Products
        //li(class=(title == 'Product') ? 'active' : undefined)
          //a(href='/products/index') Product


      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
